[user]
	name = Anthony Lamorte

[color]
	ui = true

[core]
	autocrlf = input
	excludesfile = /Users/anthlam/.gitignore_global
	editor = vim

[push]
	default = simple

[credential]
	helper = osxkeychain

[alias]
	# Diffing
	dl = "!git ll -1"
	dlc = diff --cached HEAD^
	#dr = "!f() { git diff "$1"^.."$1"; }; f"	# get bad revision error, why?
	#lc = "!f() { git ll "$1"^.."$1"; }; f"		# get bad revision error, why?
	#diffr = "!f() { git diff "$1"^.."$1"; }; f"	# get bad revision error, why?

	# Grepping
	f = "!git ls-files | grep -i"
	grep = grep -Ii

	# List things (History, Aliases)
	la = "!git config -l | grep alias | cut -c 7-"
	lds = log --pretty=format:"%C(yellow)%h\\ %C(cyan)%ad%Cred%d\\ %Creset%s%C(magenta)\\ [%cn]" --decorate --date=short
	ldr = log --pretty=format:"%C(yellow)%h\\ %C(cyan)%ad%Cred%d\\ %Creset%s%C(magenta)\\ [%cn]" --decorate --date=relative
	le = log --oneline --decorate
	ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%C(magenta)\\ [%cn]" --decorate
	ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%C(magenta)\\ [%cn]" --decorate --numstat

	# Shortcut the basics
	s = status -s
	st = status
	cl = clone
	ci = commit
	co = checkout
	br = branch
	diff = diff --word-diff

	# Resets
	r = reset
	r1 = reset HEAD^
	r2 = reset HEAD^^
	rh = reset --hard
	rhh = reset --hard HEAD
	rhrc = reset --hard origin/rc

	# Stashing
	sl = stash list
	sa = stash apply
	ss = stash save
