#! /usr/bin/env bash

# Navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~"
alias -- -="cd -"
alias db="cd ~/Dropbox"
alias dl="cd ~/Downloads"
alias dt="cd ~/Desktop"
alias p="cd ~/Projects"
alias anth="cd ~/Projects/anth"
alias dot="cd ~/Projects/anth/dotfiles"

# ITC specific navigation
alias itc="cd ~/Projects/itc"

# File management
alias la="ls -altF"
alias cat="cat -n"

# Show/hide hidden files in Finder
alias show="defaults write com.apple.finder AppleShowAllFiles -bool true && killall Finder"
alias hide="defaults write com.apple.finder AppleShowAllFiles -bool false && killall Finder"

# OSX
alias mute="osascript -e 'set volume output muted true'"
alias unmute="osascript -e 'set volume 3'"
alias emptytrash="rm -rfv ~/.Trash"

# git shortcuts
alias gbr="git br"
alias gci="git ci"
alias gcl="git cl"
alias gco="git co"
alias gd="git diff"
alias gf="git f"
alias gg="git grep"
alias gla="git la"
alias glds="git lds -25"
alias gldsb="git lds -50"
alias gldr="git ldr -25"
alias grh="git rh"
alias grhm="git rhm"
alias grhrc="git rhrc"
alias grs="git rs"
alias gs="git s"
alias gst="git st"
alias gpo="git po"

# Editors
alias space="open /Applications/Emacs.app"

# process killing/grepping
alias pk="pkill -9 \!^"

# Search bash history
alias gh="history | grep "

# Postgres
alias pgstart="pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log start"
alias pgstop="pg_ctl -D /usr/local/var/postgres stop -s -m fast"

# ctags
alias actags="rm tags; ctags --exclude=.git --exclude=vendor --exclude=node_modules --exclude=coverage --exclude=public -R .;"

# Reloading profile
alias sop="source ~/.bash_profile; rvm reload"

# Better silver searcher default
alias ag="ag -u"
