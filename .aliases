#! /usr/bin/env bash

# Navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~"
alias -- -="cd -"
alias db="cd ~/Dropbox"
alias dl="cd ~/Downloads"
alias dt="cd ~/Desktop"
alias p="cd ~/Projects"
alias anth="cd ~/Projects/anth"

# TTM specific navigation
alias ttm="cd ~/Projects/TTM"
alias ttma="cd ~/Projects/TTM/apangea"
alias ttmr="cd ~/Projects/TTM/reporting"
alias ttmlp="cd ~/Projects/TTM/lesson-player"
alias ttmlt="cd ~/Projects/TTM/live_teaching"
alias ttmab="cd ~/Projects/TTM/avatar-builder"
alias ttmm="cd ~/Projects/TTM/meta"

# TTM specific other 
alias ttmsfl="ttmscalr farm:list"
alias gi="~/Projects/TTM/gi/gi; open issues.html; sleep 2; rm issues.html"

# Listing
alias la="ls -alF"

# Empty Trash
alias emptytrash="rm -rfv ~/.Trash"

# Show/hide hidden files in Finder
alias show="defaults write com.apple.finder AppleShowAllFiles -bool true && killall Finder"
alias hide="defaults write com.apple.finder AppleshowAllFiles -bool false && killall Finder"

# Other
alias mute="osascript -e 'set volume output muted true'"
alias unmute="osascript -e 'set volume 3'"

# git shortcuts
alias gbr="git br"
alias gci="git ci"
alias gcl="git cl"
alias gco="git co"
alias gd="git diff"
alias gf="git f"
alias gg="git grep"
alias gh="history | grep "
alias gla="git la"
alias glds="git lds -25"
alias gldr="git ldr -25"
alias grh="git rh"
alias grhm="git rhm"
alias grhrc="git rhrc"
alias grs="git rs"
alias gs="git s"
alias gst="git st"
alias gpo="git po"

# other shortcuts
alias pk="pkill -9 \!^"
alias s="sublime ."
alias pgstart="pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log start"
alias pgstop="pg_ctl -D /usr/local/var/postgres stop -s -m fast"

# Running TTM apps
alias runttm="ttma; bundle exec foreman start"
alias runttmd="ttma; bundle exec foreman s -f Procfile.Development"
alias runttmnr="ttma; bundle exec foreman s -f Procfile.NewRelic"
alias runrep="ttmr; bundle exec foreman start -p 3000"
alias runrepd="ttmr; bundle exec foreman s -f Procfile.Development"
alias runrepnr="ttmr; bundle exec foreman s -f Procfile.NewRelic"
alias runlp="ttmlp; grunt serve:dist"
alias runlt="ttmlt; ASSETS_USE_DIST=true foreman start -p 5050 -f Procfile.debug"
alias runab="ttmab; grunt serve:dist"

# Testing TTM apps
alias startats="rake db:test:prepare; RAILS_ENV=test rake servers:start"
alias stopats="RAILS_ENV=test rake servers:stop"
alias jtesta="bundle exec rake spec:javascript"
alias ftesta="ruby test/fast/runner.rb"
