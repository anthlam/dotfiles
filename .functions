#! /usr/bin/env bash

# Display colors
colortest() {
  for i in {0..255}; do
    echo " $i:  $(tput setaf $i)This is a test$(tput sgr0) $(tput setab $i)This is a test$(tput sgr0)";
  done;
}

# Cleanup git local branches that don't have a remote
glbclean() {
  git fetch --all -p
  git branch -vv | grep ": gone]" | awk '{ print $1 }' | xargs -n 1 git branch -D
}

# Print PATH in easier to read format
mypath() {
  echo -e ${PATH//:/\\n}
}

# Grep for a process
psg() {
  ps aux | grep $@
}

# Rails Console shortcut
rc() {
if [ -z "$@" ]; then
  foreman run rails c
else
  ttmscalr rails_c -f $@
fi
}

# Test TTM Branch
# Must be run from a TTM repo
tb() {
  git checkout rc
  git reset --hard origin/rc
  git pull
  git pull --no-ff --no-edit origin $@
}

# ttmscalr config shortcut
ttmcfg() {
  ttmscalr config -f $@
}

# ttmscalr ssh shortcut
ttmssh() {
  ttmscalr ssh debug.1 -f $@
}

# open buffer output in vim
v() {
  $@ | vim -R -
}

# get the weather for a city
weather() {
  curl -s http://wttr.in/$1
}
